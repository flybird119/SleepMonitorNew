<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/welcome"
    android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="150dp"
        >

        <!-- 账号与密码输入 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:background="@drawable/bg3"
            android:orientation="vertical" >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

			<ImageView
        		android:id="@+id/image1"
        		android:layout_width="wrap_content"
       			android:layout_height="45.0dip"
       			android:layout_marginLeft="12dip"
        		android:src="@drawable/bl1" />
            <EditText
                android:id="@+id/login_username"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="#00ffffff"
                android:ems="10"
                android:hint="请输入账号"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="12.0dip"
                android:textColor="#ff1d1d1d"
                android:textColorHint="#ff666666"
                android:textSize="16.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" >
            
			    <ImageView
			        android:id="@+id/image2"
			        android:layout_width="wrap_content"
			        android:layout_height="45.0dip"
			        android:layout_marginLeft="8dip"
			        android:src="@drawable/bl2" />
			
            <EditText
                android:id="@+id/login_password"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#00ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="12.0dip"
                android:textColor="#ff1d1d1d"
                android:textColorHint="#ff666666"
                android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    
    <ImageButton 
        android:id="@+id/loginButton"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/input"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:src="@drawable/bg4"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1" >

        <CheckBox
            android:id="@+id/auto_save_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/checkbox_bg1"
            android:text="记住密码"
            android:textColor="#FFB6Cf"
            android:textSize="20.0sp" />
        
        <Button
            android:id="@+id/registerButton"
            android:layout_width="110dip"
            android:layout_height="35dip"
            android:layout_marginTop="5dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/bln"
            android:clickable="true"
            android:gravity="left|center"
            android:text="注册新账号"
            android:textColor="#FFB6Cf"
            android:textSize="20.0sp" />
    </RelativeLayout>
    
    
	
</RelativeLayout>
